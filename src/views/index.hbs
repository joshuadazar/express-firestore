<h1 class="center">{{#unless contact.id}}Create contact{{else}}Edit contact{{/unless}}</h1>
<div class="section"></div>

<div class="container">
    <div class="row">
        {{#unless contact.id}}
        <div class="col m4">
            <ul class="collection">
            {{#each contactArr}}
                <li class="collection-item">
                    <h6>{{firstname}} {{lastname}}</h6>
                    <p>{{phone}}</p>
                    <strong>{{email}}</strong>
                    <div class="section"></div>
                    <div class="row">
                        <div class="col s6">
                        <a href="/delete-contact/{{id}}" class="waves-effect waves-light btn purple darken-2"><i class="material-icons right">delete</i>Delete contact</a> 
                        </div>
                        <div class="col s6">
                             <a href="/edit-contact/{{id}}" class="waves-effect waves-light btn purple darken-2"><i class="material-icons right">delete</i>Edit contact</a>
                        </div>
                    </div>
                    
                </li>
            {{/each}}
            </ul>
        </div>
        {{/unless}}

        <div class="col {{#unless contact.id}}m6{{else}}s12{{/unless}}">
            <form action="{{#unless contact.id}}/new-contact{{else}}/update-contact/{{contact.id}}{{/unless}}" method="post">
                <div class="input-field col s12 l6">
                <input type="text" name="firstname" id="firstname" class="validate" value="{{contact.firstname}}">
                <label for="firstname">Primer Nombre</label>
                </div>
                <div class="input-field col s12 l6">
                <input type="text" name="lastname" id="lastname" class="validate" value="{{contact.lastname}}">
                <label for="lastname">Segundo Nombre</label>
                </div>
                <div class="input-field col s12">
                <input type="email" name="email" id="email" class="validate" value="{{contact.email}}">
                <label for="email" data-error="Correo Inválido" data-success="Correcto">Email</label>
                </div>
                <div class="input-field col s12">
                <input type="number" name="phone" id="phone" class="validate" value="{{contact.phone}}">
                <label for="phone" data-error="Correo Inválido" data-success="Correcto">phone</label>
                </div>
                <button class="btn waves-effect waves-light blue" type="submit" name="action">Enviar
                <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
    </div>
</div>